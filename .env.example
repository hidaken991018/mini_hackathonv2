# PostgreSQL接続設定
# ローカル開発: Docker等でPostgreSQLを起動し、以下の形式で設定
DATABASE_URL="postgresql://user:password@localhost:5432/hackathon?schema=public"

# Cloud SQL接続 (Cloud Run用)
# DATABASE_URL="postgresql://dbuser:PASSWORD@/hackathon?host=/cloudsql/PROJECT_ID:asia-northeast1:mini-hackathon-db"

# Vertex AI 設定
# Cloud Run では自動設定されるため、ローカル開発時のみ設定
GOOGLE_CLOUD_PROJECT="syufy-85423"
VERTEX_AI_LOCATION="asia-northeast1"

# ローカル開発時は以下のコマンドで認証:
# gcloud auth application-default login

# Firebase Configuration (クライアント側)
# Firebase Console → プロジェクト設定 → 全般 → マイアプリ から取得
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
FIREBASE_CLIENT_EMAIL=your-service-account-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...snip...\n-----END PRIVATE KEY-----\n"

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mini_hackathon?schema=public"

# Google Generative AI (Gemini)
GEMINI_API_KEY=your-gemini-api-key

# 期限通知APIの合言葉（任意の文字列を設定）
NOTIFY_SECRET=
